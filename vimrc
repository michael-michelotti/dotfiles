set history=500       " Longer command history
set showcmd           " Show incomplete commands
set wildmenu          " Show a menu for command tab completion
set number            " Add number lines
set relativenumber    " Show relative line numbers
set tabstop=4         " Each tab is 4 spaces
set expandtab         " Replace tab characters with spaces
set autoindent        " Keep indent from previous line
set smartindent       " Smarter than autoindent
set ignorecase        " Case insensitive search
set smartcase         " Match case for capital letters only
set hlsearch          " Highlight search results
set incsearch         " Search as characters are entered
set mouse=a           " Enable mouse support
set lbr               " Wrap entire words

set belloff=all       " Flash cursor rather than noise on error
syntax enable         " Turn on syntax highlighting
colorscheme molokai   " monokai.vim from https://github.com/sickill/vim-monokai/tree/master/colors must be in ~/.vim/colors
                      " molokai.vim: https://github.com/tomasr/molokai

